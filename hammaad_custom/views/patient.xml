<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="hospital menu">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="note"/>
                <field name="is_virtual_checkup"/>
            </tree>
        </field>
    </record>


    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_image" widget="image"/>
                            <field name="name" placeholder="Name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="phone_number"/>
                            <field name="address" widget="html"/>
                        </group>

                        <group>
                            <field name="note"/>
                            <field name="is_virtual_checkup"/>
                            <field name="establish_date"/>
                            <field name="open_date"/>
                        </group>
                        <group>
                            <field name="documents" filename="documents_name"/>
                            <field name="documents_name" invisible="1"/>

                        </group>
                        <group>
                            <field name="patient_description"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
<!--        <field name="view_id" ref="patient_tree"/>-->
    </record>


    <menuitem
            id="hospital_root"
            name="Hospital"
            action="patient_action"
            sequence="10"/>
