<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="attandance_tree" model="ir.ui.view">
        <field name="name">attandance.model.tree</field>
        <field name="model">attandance.model</field>
        <field name="arch" type="xml">
            <tree string="attandance menu">
                <field name="employee"/>
                <field name="checkin"/>
                <field name="checkout"/>
                <field name="workinghours"/>
            </tree>
        </field>
    </record>





    <record id="attandance_action" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attandance.model</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem
            id="attandance_root"
            name="Attendance"
            action="attandance_action"
            sequence="10"/>



</odoo>